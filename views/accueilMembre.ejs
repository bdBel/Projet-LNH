<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Page du membre <%= username %></title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: rgb(234, 233, 233); }
        .container { margin-left: 20px; }
        .card { margin-bottom: 20px; }
        .card-header { background-color: red; color: white; }
        .card-body { background-color: #97c0e9; }
        .navbar { background-color: #343a40; }
        .navbar a { color: white; }
        .dropdown-menu { background-color: #343a40; }
        .dropdown-item { color: white; }
        .personalize-box { margin-top: 20px; margin-bottom: 20px; display: flex; justify-content: flex-start; }
        .personalize-box .dropdown { display: inline-block; margin-left: 80px; }
        .modal-content { background-color: #f8f9fa; }
        .modal-header { background-color: red; color: white; }
        .row { display: flex; justify-content: space-between; }
        .col-md-6 { margin-bottom: 20px; }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('composant/navbar') %>
    <!-- LiveScore -->
     
    <%- include('composant/liveScore')%>
  
    <!-- Personalize Dropdown Box (Below Navbar) -->
    <div class="personalize-box mb-5">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton">
                Personnaliser
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Ajouter votre photo</a>
                <a class="dropdown-item" href="#">Personaliser votre thème</a>
                <a class="dropdown-item" href="#">Chatter avec les autres membres</a>
                <a class="dropdown-item" href="#">Votre boutique</a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="mt-4 container">
        <h1>Bienvenue, <%= username %>!</h1>

        <div class="row">
            <!-- Favorite Teams Section -->
            <div class="col-md-5">
                <h3>Ajouter vos équipes favorites</h3>
                <button class="btn btn-primary" data-toggle="modal" data-target="#teamModal">Choisir votre équipe</button>
                <!-- Modal for Selecting Team -->
                <div class="modal fade" id="teamModal" tabindex="-1" role="dialog" aria-labelledby="teamModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="teamModalLabel">Sélectionner une équipe</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <ul id="teamList">
                                    <li><a href="#" class="team-item">Équipe 1</a></li>
                                    <li><a href="#" class="team-item">Équipe 2</a></li>
                                    <li><a href="#" class="team-item">Équipe 3</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Team Cards -->
                <div id="teamCards">
                    <div class="card">
                        <div class="card-header">Mes équipes favorites</div>
                        <div class="card-body">
                            <select class="form-control">
                                <option>Dernières nouvelles</option>
                                <option>Derniers scores</option>
                                <option>Historique</option>
                                <option>Head to Head</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

       <!-- Upcoming Matches & Predictions Section -->
<div class="col-md-5">
    <h3>Prochains matchs & Prédictions</h3>
    
    <% if (games && games.length > 0) { %>
        <% games.forEach(function(match) { %> <!-- Loop through each match -->
            <div class="card mb-4">
                <div class="card-header"><%= match.teams %> - <%= match.date %></div>
                <div class="card-body">
                    <!-- Include the voting form partial -->
                    <%- include('composant/voteForm', { match: match }) %>

                </div>
            </div>
        <% }); %> <!-- End match loop -->
    <% } else { %>
        <p>Aucun match à venir.</p>
    <% } %>
</div>


    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
